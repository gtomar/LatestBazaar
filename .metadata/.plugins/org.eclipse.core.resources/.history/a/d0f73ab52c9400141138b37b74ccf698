<dialogs>
	
	<dialog concept="GOAL_IDENTIFICATION" scenario="scenario-goal">
    	
    	
    	<!-- The intro prompt is offered to students. 
    	If they respond in the affirmative, the dialogue begins.-->
        <intro>What type of android app, you are planning to develop?</intro>
        <accept annotation="AUDIO_CAPTURE">Great, we will be planning to develop an audio recorder.</accept>
        <cancel>Sorry, I can't help you with this. You are on your own.</cancel>
    </dialog>
    
    <dialog concept="RECORDER_API" scenario="scenario-animals">
    	
        <trigger annotation="RECORDER_API"/>
        <trigger annotation="TYPE_RECORDER"/>
    	
    	<!-- The intro prompt is offered to students. 
    	If they respond in the affirmative, the dialogue begins.-->
        <intro>Correct, we need to create a new instance/object for recorder.</intro>
        <cancel annotation="TYPE_RECORDER">You are done with this step.</cancel>
        <accept annotation="QUESTION">It seems you have a question.</accept>
        <accept >It seems you are stuck.</accept>
        
    </dialog>

	<!-- the ANIMAL_IDENTIFICATION dialogue is specified 
	in the file "scenario-animals.xml" in the dialogues folder. -->
    <dialog concept="ANIMAL_IDENTIFICATION" scenario="scenario-animals">
    	
    	<!-- messages that receive the annotation ANIMALS will trigger an offer for this dialogue.
    	  automatic annotations are defined by lists of words 
    	  and regular expressions in the dictionaries/ folder. -->
    	<trigger annotation="ANIMALS"/>
    	
    	<!-- The intro prompt is offered to students. 
    	If they respond in the affirmative, the dialogue begins.-->
        <intro>We can work on your basic zoology. Are you ready?</intro>
        <accept annotation="AFFIRMATIVE">Let's get started.</accept>
        <cancel annotation="NEGATIVE">Okay - I'm here when you need me.</cancel>
    </dialog>
  
    <dialog concept="GET_A_HUG" scenario="scenario-hugs">
    	<trigger annotation="CONFUSION"/>
    	<trigger annotation="QUESTION"/>
        <intro>It sounds like you're confused. Would you like some help?</intro>
        <accept annotation="AFFIRMATIVE">Great!</accept>
        <cancel annotation="NEGATIVE">Okay, no problem!</cancel>
    </dialog>
</dialogs>
